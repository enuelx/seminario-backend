{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "seminario-api",
    "description": "Aplicaci√≥n para Seminario 1 - Only in localhost mode",
    "license": {
      "name": "ISC"
    }
  },
  "host": "localhost:4000",
  "basePath": "/",
  "tags": [
    {
      "name": "Seminario",
      "description": "API for users in the system"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/signIn": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Login in backend",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "Login with user registered in backend",
            "schema": {
              "$ref": "#/definitions/UserLoginIn"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Login success"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Email unregister"
          }
        }
      }
    },
    "/user/{email}": {
      "get": {
        "tags": [
          "Users"
        ],
        "description": "Get an user in system",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "required": true,
            "type": "string",
            "description": "Bearer Token for authorization"
          },
          {
            "name": "email",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "User that we want to obtain"
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "User exist"
          },
          "400": {
            "description": "Missing a mandatory field"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "User don't exist"
          }
        }
      }
    },
    "/signUp": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Create new user in system",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to create",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "New user is created"
          },
          "400": {
            "description": "Missing a mandatory field"
          },
          "401": {
            "description": "Unauthorized"
          },
          "409": {
            "description": "Email in use"
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": [
          "Users"
        ],
        "description": "Get all users in system",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "required": true,
            "type": "string",
            "description": "Bearer Token for authorization"
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "There are users"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "there are no users in the system"
          }
        }
      }
    },
    "/request-reset-password/{email}": {
      "get": {
        "tags": [
          "Users"
        ],
        "description": "Request change password",
        "parameters": [
          {
            "name": "email",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "User that we want to obtain"
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Send email with token"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/reset-password": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Create a new class",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "required": true,
            "type": "string",
            "description": "Bearer Token for authorization"
          },
          {
            "name": "user",
            "in": "body",
            "description": "Login with user registered in backend",
            "schema": {
              "$ref": "#/definitions/UserResetPassword"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Password reset successfully"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "User don't exist"
          }
        }
      }
    }
  },
  "definitions": {
    "UserLoginIn": {
      "required": [
        "email",
        "password"
      ],
      "properties": {
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "password": {
          "type": "string"
        }
      }
    },
    "User": {
      "required": [
        "firstName",
        "lastName",
        "email",
        "password"
      ],
      "properties": {
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "password": {
          "type": "string"
        }
      }
    },
    "UserResetPassword": {
      "required": [
        "email",
        "newPassword"
      ],
      "properties": {
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "newPassword": {
          "type": "string"
        }
      }
    }
  }
}